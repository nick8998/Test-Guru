<%= form_with model: [@question, @answer], local: true do |form| %>
  <%= render 'shared/errors', resourse: @answer %>
  <p>
  <%= form.label :wording %><br>
  <%= form.text_area :wording, id: :answer_wording, rows: 7, cols: 60%>
</p><br>

<p>
  <%= form.label :correct %><br>
  <%= form.check_box :correct, id: :answer_correct  %>
</p>


<p><%= form.submit %></p>
<% end %>
