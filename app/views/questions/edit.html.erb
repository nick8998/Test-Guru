<h1><%= question_header(@test, "edit")%></h1>

<%= form_with model: @question, local: true do |form| %>
  <%= render 'shared/errors', resourse: @question %>
  <p>
  <%= form.label :wording %><br>
  <%= form.text_field :wording%>
</p><br>

<p>
  <%= form.label :sublevel %><br>
  <%= form.number_field :sublevel%>
</p>

 <p>
  <%= form.label :test_id %>
  <%= form.collection_select :test_id, Test.all, :id, :title, promt: true %>
</p>

<p><%= form.submit %></p>
<% end %>

<%= link_to 'Back', question_path(@question) %>

